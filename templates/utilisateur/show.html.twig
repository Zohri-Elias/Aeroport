{% extends 'base.html.twig' %}

{% block title %}Détails Utilisateur{% endblock %}

{% block body %}
    <h1>Détails de l'utilisateur</h1>

    <p>ID : {{ utilisateur.id }}</p>
    <p>Nom : {{ utilisateur.nom }}</p>
    <p>Email : {{ utilisateur.email }}</p>

    <a href="{{ path('app_utilisateur_index') }}">Retour à la liste</a>
    <a href="{{ path('app_utilisateur_edit', {id: utilisateur.id}) }}">Modifier</a>

    <form method="post" action="{{ path('app_utilisateur_delete', {id: utilisateur.id}) }}" style="display:inline;">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ utilisateur.id) }}">
        <button type="submit">Supprimer</button>
    </form>
{% endblock %}
