{% extends 'base.html.twig' %}

{% block title %}Détails de l'avion {{ avion.immatriculation }}{% endblock %}

{% block body %}
    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow-sm">
                    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                        <h2 class="mb-0">Détails de l'avion {{ avion.immatriculation }}</h2>
                        <div class="btn-group">
                            <a href="{{ path('app_avion_edit', {'id': avion.id}) }}" class="btn btn-warning btn-sm">
                                <i class="fas fa-edit"></i> Modifier
                            </a>
                            <a href="{{ path('app_avion_index') }}" class="btn btn-secondary btn-sm">
                                <i class="fas fa-list"></i> Liste
                            </a>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <h5 class="fw-bold">Informations techniques</h5>
                                <ul class="list-group list-group-flush">
                                    <li class="list-group-item d-flex justify-content-between">
                                        <span>Immatriculation:</span>
                                        <span class="fw-bold">{{ avion.immatriculation }}</span>
                                    </li>
                                    <li class="list-group-item d-flex justify-content-between">
                                        <span>Modèle:</span>
                                        <span class="fw-bold">{{ avion.modele }}</span>
                                    </li>
                                </ul>
                            </div>
                            <div class="col-md-6">
                                <h5 class="fw-bold">Capacités</h5>
                                <ul class="list-group list-group-flush">
                                    <li class="list-group-item d-flex justify-content-between">
                                        <span>Nombre de places:</span>
                                        <span class="fw-bold">{{ avion.nombreDePlace }}</span>
                                    </li>
                                    <li class="list-group-item d-flex justify-content-between">
                                        <span>Statut:</span>
                                        <span class="badge bg-success">Opérationnel</span>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer text-muted">
                        Dernière mise à jour: {{ "now"|date("d/m/Y H:i") }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}