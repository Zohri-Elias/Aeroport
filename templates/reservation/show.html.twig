{% extends 'base.html.twig' %}

{% block title %}Détails Réservation{% endblock %}

{% block body %}
    <h1>Détails de la réservation</h1>

    <p>ID : {{ reservation.id }}</p>
    <p>Utilisateur : {{ reservation.utilisateur.nom }}</p>
    <p>Date : {{ reservation.dateReservation|date('d/m/Y') }}</p>

    <a href="{{ path('app_reservation_index') }}">Retour à la liste</a>
    <a href="{{ path('app_reservation_edit', {id: reservation.id}) }}">Modifier</a>

    <form method="post" action="{{ path('app_reservation_delete', {id: reservation.id}) }}" style="display:inline;">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reservation.id) }}">
        <button type="submit">Supprimer</button>
    </form>
{% endblock %}
