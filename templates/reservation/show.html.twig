{% extends 'base.html.twig' %}

{% block title %}Profil de {{ utilisateur.prenom }} {{ utilisateur.nom }}{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h2>Profil Utilisateur</h2>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <p><strong>Nom:</strong> {{ utilisateur.nom }}</p>
                    <p><strong>Prénom:</strong> {{ utilisateur.prenom }}</p>
                    <p><strong>Email:</strong> {{ utilisateur.email }}</p>
                </div>
                <div class="col-md-6">
                    <p><strong>Ville:</strong> {{ utilisateur.ville }}</p>
                    <p><strong>Date de naissance:</strong> {{ utilisateur.dateNaissance|date('d/m/Y') }}</p>
                    <p><strong>Rôle:</strong> {{ utilisateur.roles|join(', ') }}</p>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <a href="{{ path('app_utilisateur_edit', {'id': utilisateur.id}) }}" class="btn btn-warning">
                <i class="fas fa-edit"></i> Modifier
            </a>
            <a href="{{ path('app_utilisateur_index') }}" class="btn btn-secondary">
                Retour à la liste
            </a>
        </div>
    </div>
{% endblock %}