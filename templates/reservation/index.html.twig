{% extends 'base.html.twig' %}

{% block title %}Mes Réservations{% endblock %}

{% block body %}
    <h1 class="mb-4"><i class="fas fa-ticket-alt"></i> Mes Réservations</h1>

    <div class="table-responsive">
        <table class="table">
            <thead>
            <tr>
                <th>Référence</th>
                <th>Vol</th>
                <th>Date</th>
                <th>Classe</th>
                <th>Prix</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for reservation in reservations %}
                <tr>
                    <td>{{ reservation.id }}</td>
                    <td>{{ reservation.vol }}</td>
                    <td>{{ reservation.dateReservation|date('d/m/Y') }}</td>
                    <td>{{ reservation.classe }}</td>
                    <td>{{ reservation.prixFinal }} €</td>
                    <td>
                        <a href="{{ path('app_reservation_show', {'id': reservation.id}) }}" class="btn btn-sm btn-info">
                            <i class="fas fa-eye"></i>
                        </a>
                        <a href="{{ path('app_reservation_edit', {'id': reservation.id}) }}" class="btn btn-sm btn-warning">
                            <i class="fas fa-edit"></i>
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <a href="{{ path('app_reservation_new') }}" class="btn btn-primary">
        <i class="fas fa-plus"></i> Nouvelle Réservation
    </a>
{% endblock %}