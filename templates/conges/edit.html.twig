{% extends 'base.html.twig' %}

{% block title %}Modifier Congé{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow-sm">
                    <div class="card-header bg-primary text-white">
                        <h2><i class="fas fa-edit me-2"></i> Modifier le congé</h2>
                    </div>
                    <div class="card-body">
                        {{ form_start(form) }}
                        <div class="row g-3">
                            {% if is_granted('ROLE_ADMIN') %}
                                <div class="col-md-6">
                                    {{ form_row(form.utilisateur, {
                                        'label': 'Employé',
                                        'attr': {'class': 'form-select'}
                                    }) }}
                                </div>
                                <div class="col-md-6">
                                    {{ form_row(form.estValide, {
                                        'label': 'Statut',
                                        'attr': {'class': 'form-select'}
                                    }) }}
                                </div>
                            {% endif %}
                            <div class="col-md-6">
                                {{ form_row(form.dateDebut, {
                                    'label': 'Date de début',
                                    'attr': {'class': 'form-control'}
                                }) }}
                            </div>
                            <div class="col-md-6">
                                {{ form_row(form.dateFin, {
                                    'label': 'Date de fin',
                                    'attr': {'class': 'form-control'}
                                }) }}
                            </div>
                            <div class="col-12">
                                {{ form_row(form.motif, {
                                    'label': 'Motif',
                                    'attr': {'class': 'form-control', 'rows': 3}
                                }) }}
                            </div>
                        </div>
                        <div class="mt-4 d-flex justify-content-between">
                            <a href="{{ path('app_conges_show', {'id': conge.id}) }}" class="btn btn-outline-secondary">
                                <i class="fas fa-times me-2"></i> Annuler
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i> Enregistrer
                            </button>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}