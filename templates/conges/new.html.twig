{% extends 'base.html.twig' %}

{% block title %}Nouveau Congé{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow-sm">
                    <div class="card-header bg-primary text-white">
                        <h2><i class="fas fa-plus-circle me-2"></i> Créer un nouveau congé</h2>
                    </div>
                    <div class="card-body">
                        {{ form_start(form) }}
                        <div class="row g-3">
                            {% if is_granted('ROLE_ADMIN') %}
                                <div class="col-md-6">
                                    {{ form_row(form.utilisateur) }}
                                </div>
                                <div class="col-md-6">
                                    {{ form_row(form.estValide) }}
                                </div>
                            {% endif %}
                            <div class="col-md-6">
                                {{ form_row(form.dateDebut) }}
                            </div>
                            <div class="col-md-6">
                                {{ form_row(form.dateFin) }}
                            </div>
                            <div class="col-12">
                                {{ form_row(form.motif) }}
                            </div>
                        </div>
                        <div class="mt-4 d-flex justify-content-between">
                            <a href="{{ path('app_conges_index') }}" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-2"></i> Retour à la liste
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i> Enregistrer
                            </button>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}