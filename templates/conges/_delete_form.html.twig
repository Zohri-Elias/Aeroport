<form method="post" action="{{ path('app_conges_delete', {'id': conge.id}) }}"
      onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce congé ?');" class="d-inline">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ conge.id) }}">
    <button class="btn btn-sm btn-danger">
        <i class="fas fa-trash-alt"></i>
    </button>
</form>